<div class="flipcard">
  <div class="flipcard-inner">
    <%= image_tag src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/0a07b6c5-6816-4033-8e6b-ec3d1637506e/d9w5fzt-248cabe6-5e92-4c1d-8737-39d79c9e6fb4.png?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..6pZ2MgGDhNyakHF2heUZl4ZQriFjE45TQi7LkFKymlI", :class => "team-banner-review" %>

    <%= image_tag user.image, class:"friend-image" %>
      <div class="front">
        <h2>Enjoyed playing with </br><%= user.username %>?</h2>
        <div class="ok-comments">
          <%= simple_form_for [@team, @user_review] do |f| %>
          <%= f.hidden_field :user_reviewed_id, :value => user.id %>
          <%= f.input :add_friend, as: :boolean, boolean_style: :inline %>
          <%= f.input :endorse, as: :boolean, boolean_style: :inline, :class=> "user-review_checkbox" %>
          <%= f.input :nok, label: "Not really", as: :boolean, boolean_style: :inline, :class=> "user-review_checkbox hidden" %>
        </div>
      </div>

    <div class="back">
      <h2>Let <%= user.username %> know what was wrong</h2>
      <div class="nok-comments">
        <%= f.input :nok_positiveness, label: "Not positive", as: :boolean, boolean_style: :inline %>
        <%= f.input :nok_communication, label: "Not communicative", as: :boolean, boolean_style: :inline, :class=> "user-review_checkbox nok" %>
        <%= f.input :nok_helpfulness, label: "Not helful", as: :boolean, boolean_style: :inline, :class=> "user-review_checkbox nok" %>
        <%= f.input :nok_respect, label: "Not respectful", as: :boolean, boolean_style: :inline, :class=> "user-review_checkbox nok" %>
      </div>
    </div>
  <% end %>
  </div>
</div>
