<% if @team.team_review_for(current_user) != [] %>
  <div class="banner-review">
    <div class="title-review">
      <h1>THE GAME IS <strong><span class="pink-text">NOT OVER</span></strong></h1>
      <p>Build a respectful community by reviewing your teammates</p>
    </div>
  </div>

  <div class="container rating-card-wrapper">
    <div class="row">
      <% @team.users.each do |member| %>
        <% if member.id != current_user.id %>
          <div class="col-sm-12 col-md-6 col-lg-4">
            <%= render 'shared/flip_card_user_review', user: member, team: @team, user_review: @user_review %>
          </div>
        <% end %>
      <% end %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="team-review">
          <div class="team-rating">
            <div id="rater"></div>
              <%= simple_form_for [@team, @team_review] do |f| %>
                <%= f.hidden_field :rating, :value => 5 %>
                <%= f.input :comment, label: false, placeholder: "It worth a word", as: :text %>
                <%= f.button :submit, "Submit", class: "my-button btn-user-rating" %>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>


<% else %>
  <div class="already-submitted">
    <div class="already-submitted-text">
      <h1>You already submited you review on this team!</h1>
      <p>(thanks)</p>
    </div>
    <div>
      <%= link_to "My profile",  user_path(current_user.id), class:"button-green"%>
      <%= link_to "Find a team",  new_team_path, class:"button-green"%>
    </div>
  </div>
<% end %>
