<div class="banner-review">
  <div class="title-review">
    <h1>THE GAME IS <strong><span class="pink-text">NOT OVER</span></strong></h1>
    <p>Build a respectful community by reviewing your teammates</p>
  </div>
</div>


<div class="container-review">

<!-- IF THERE IS NO TEAM REVIEW FOR CURRENT USER AND CURRENT TEAM -->
  <% if @team.team_review_for(current_user) == [] %>
    <!-- LOOP UNTIL THERE IS STILL USER REVIEWS NEEDED FOR CURRENT USER -->
    <% loop do %>
      <% member = @team.user_review_needed(current_user).first %>
      <!-- IF THERE IS STILL MEMBERS NEEDING REVIEWS: SUBMIT USER REVIEW-->
      <% if !member.nil? %>
        <%= render 'shared/user_review_card', user: member, team: @team %>
      <!-- IF THERE IS NO MORE MEMBERS NEEDING REVIEWS: SUBMIT TEAM REVIEW -->
      <% elsif member.nil? %>

        <div class="rating-card team-review">
          <div class="team-rating">
            <div id="rater"></div>
            <div>
              <%= simple_form_for [@team, @team_review] do |f| %>
              <%= f.hidden_field :rating, :value => 5 %>
              <%= f.input :comment, label: false, placeholder: "It worth a word", as: :text %>
            </div>
              <%= f.button :submit, "Submit", class: "my-button btn-user-rating" %>
              <% end %>
          </div>
        </div>
      <% end %>
    <% break  @team.user_review_needed(current_user).any? == false %>
    <% end %>

