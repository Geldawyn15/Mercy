
<div class="form-banner form-banner-sign">
  <div class="container">
    <div class="row">
      <div class="form-text-container col-sm-12 col-md-6">
        <h1 class="text-danger">Log in</h1>
        <p class="text-dark">Connect to your account and join the greatest non-toxic players community ever!</p>
      </div>
      <div class="col-sm-12 col-md-6">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs text-dark">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class:"button2" %>
          <div>
            <%= render "devise/shared/links" %>
          </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
